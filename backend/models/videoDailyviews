import mongoose from 'mongoose';

const videoDailyViewsSchema = new mongoose.Schema({
  video: {
    type: mongoose.Schema.Types.ObjectId,
    ref: 'Video',
    required: true
  },
  date: {
    type: String, // "YYYY-MM-DD"
    required: true
  },
  viewCount: {
    type: Number,
    default: 1
  }
});

videoDailyViewsSchema.index({ video: 1, date: 1 }, { unique: true });

export default mongoose.model('videoDailyviews', videoDailyViewsSchema);
